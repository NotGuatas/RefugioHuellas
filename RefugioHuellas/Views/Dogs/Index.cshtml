@model IEnumerable<RefugioHuellas.Models.Dog>
@{
    ViewData["Title"] = "Perros";
    bool isAdmin = User.IsInRole("Admin");

    // Si el controlador no envía ViewBag.WindowDays,
    // usamos 7 como valor por defecto.
    var windowDays = ViewBag.WindowDays is int d && d > 0 ? d : 7;
}

<h1>Perros en el Refugio</h1>

@if (isAdmin)
{
    <p>
        <a asp-action="Create" class="btn btn-success">Agregar nuevo perro</a>
    </p>
}

@if (!Model.Any())
{
    <p class="text-muted">No hay perros registrados aún.</p>
}
else
{
    <table class="table table-striped">
        <thead class="table-light">
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Foto</th>
                <th>Estado de salud</th>
                <th>Esterilizado</th>
                <th>Fecha ingreso</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                // --- Ventana de adopción ---
                var closeAtUtc = item.IntakeDate.AddDays(windowDays);
                var cerrada = DateTime.UtcNow >= closeAtUtc;

                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>
                        @if (!string.IsNullOrWhiteSpace(item.PhotoUrl))
                        {
                            <img src="@item.PhotoUrl" alt="@item.Name" width="100" />
                        }
                        else
                        {
                            <span class="text-muted">Sin foto</span>
                        }
                    </td>
                    <td>@item.HealthStatus</td>
                    <td>@(item.Sterilized ? "Sí" : "No")</td>
                    <td>@item.IntakeDate.ToLocalTime().ToShortDateString()</td>
                    <td class="text-nowrap">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Ver</a>

                        @if (!cerrada)
                        {
                            if (User.Identity?.IsAuthenticated == true)
                            {
                                <a asp-controller="AdoptionApplications"
                                   asp-action="Create"
                                   asp-route-dogId="@item.Id"
                                   class="btn btn-sm btn-success ms-1">Adoptar</a>
                            }
                            else
                            {
                                <a href="/Identity/Account/Login?returnUrl=@Uri.EscapeDataString($"/AdoptionApplications/Create?dogId={item.Id}")"
                                   class="btn btn-sm btn-success ms-1">Adoptar</a>
                            }
                        }
                        else
                        {
                            <span class="badge bg-primary ms-1">CERRADA</span>
                        }

                        @if (isAdmin)
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning ms-1">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger ms-1">Eliminar</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

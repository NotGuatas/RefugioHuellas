@model RefugioHuellas.Models.Dog
@{
    ViewData["Title"] = "Crear perro";
}

<div class="page-title">
    <div>
        <h1>Registrar nuevo perro</h1>
        <p>Completa la información para agregar un nuevo peludito al refugio.</p>
    </div>
</div>

<div class="card card-section">
    <div class="card-body">
        <div class="row">
            <div class="col-md-7 col-lg-6">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Nombre -->
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Nombre</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <!-- Descripción -->
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Descripción</label>
                        <textarea asp-for="Description" rows="3" class="form-control"
                                  placeholder="Historia breve, carácter, cuidados..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <!-- Características -->
                    <h5 class="mt-4 mb-3">Características</h5>

                    <div class="mb-3">
                        <label asp-for="Breed" class="form-label">Raza</label>
                        <input asp-for="Breed" class="form-control"
                               placeholder="Ej: Mestizo, Labrador, Chihuahua..." />
                        <span asp-validation-for="Breed" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Size" class="form-label">Tamaño</label>
                            <select asp-for="Size" class="form-select">
                                <option value="">-- Seleccione --</option>
                                <option>Pequeño</option>
                                <option>Mediano</option>
                                <option>Grande</option>
                            </select>
                            <span asp-validation-for="Size" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="EnergyLevel" class="form-label">Nivel de energía</label>
                            <input asp-for="EnergyLevel"
                                   type="range"
                                   min="1"
                                   max="5"
                                   class="form-range"
                                   oninput="document.getElementById('elv').innerText=this.value" />
                            <div class="form-text">
                                Valor: <strong id="elv">@Model?.EnergyLevel</strong> (1 bajo – 5 alto)
                            </div>
                            <span asp-validation-for="EnergyLevel" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="IdealEnvironment" class="form-label">Entorno ideal</label>
                        <select asp-for="IdealEnvironment" class="form-select">
                            <option value="">-- Seleccione --</option>
                            <option>Departamento</option>
                            <option>Casa con patio</option>
                        </select>
                        <span asp-validation-for="IdealEnvironment" class="text-danger"></span>
                    </div>

                    <!-- 🔹 NUEVO: Origen del perro -->
                    <div class="mb-3">
                        <label asp-for="OriginTypeId" class="form-label">Origen del perro</label>
                        <select asp-for="OriginTypeId"
                                class="form-select"
                                asp-items="ViewBag.OriginTypeId">
                            <option value="">-- Seleccione --</option>
                        </select>
                        <span asp-validation-for="OriginTypeId" class="text-danger"></span>
                    </div>

                    <!-- Imagen -->
                    <div class="mb-3">
                        <label class="form-label">Imagen (subir archivo)</label>
                        <input asp-for="PhotoFile" type="file" class="form-control" />
                        <span asp-validation-for="PhotoFile" class="text-danger"></span>
                        <div class="form-text">
                            Formatos permitidos: .jpg .png .gif .webp · Máx 5MB
                        </div>
                    </div>

                    <!-- Salud -->
                    <div class="mb-3">
                        <label asp-for="HealthStatus" class="form-label">Estado de salud</label>
                        <input asp-for="HealthStatus" class="form-control"
                               placeholder="Vacunas al día, desparasitado, etc." />
                        <span asp-validation-for="HealthStatus" class="text-danger"></span>
                    </div>

                    <!-- Esterilizado -->
                    <div class="form-check mb-3">
                        <input asp-for="Sterilized" class="form-check-input" />
                        <label asp-for="Sterilized" class="form-check-label">Esterilizado</label>
                    </div>

                    <!-- Fecha de ingreso -->
                    <div class="mb-3">
                        <label asp-for="IntakeDate" class="form-label">Fecha de ingreso</label>
                        <input asp-for="IntakeDate" type="datetime-local" class="form-control" />
                        <span asp-validation-for="IntakeDate" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-success">Crear</button>
                    <a asp-action="Index" class="btn btn-outline-secondary ms-2">Volver</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

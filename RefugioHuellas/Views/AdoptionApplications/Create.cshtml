@{
    ViewData["Title"] = "Solicitar adopción";
    var dogId = (int)ViewBag.DogId;
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["AdoptOk"] != null)
{
    <div class="alert alert-success">@TempData["AdoptOk"]</div>
}

<form asp-action="Create" method="post">
    <input type="hidden" name="dogId" value="@dogId" />
    <!-- opcional: notas -->
    <div class="mb-3">
        <label class="form-label">Notas (opcional)</label>
        <textarea class="form-control" name="notes"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Confirmar solicitud</button>
</form>

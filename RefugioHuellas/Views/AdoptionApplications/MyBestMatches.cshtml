@model IEnumerable<RefugioHuellas.Models.ViewModels.MyBestMatchVm>

@{
    ViewData["Title"] = "Mis mejores coincidencias";
    var window = (int)(ViewBag.WindowDays ?? 7);
    bool needsProfile = ViewBag.NeedsProfile == true;
}

<div class="page-title">
    <div>
        <h1>Mis mejores coincidencias</h1>
        <p>
            Basado en tu formulario de compatibilidad, estos son los perritos que mejor encajan contigo.
        </p>
    </div>
</div>

@if (needsProfile)
{
    <div class="alert alert-danger">
        Primero necesitas completar tu formulario de compatibilidad al adoptar un perrito.
        A partir de ahí podremos recomendarte mejores coincidencias.
    </div>
}
else
{
    <p class="text-muted">
        Mostramos hasta 3 perritos que mejor coinciden contigo según tu perfil de compatibilidad.
    </p>

    @if (Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrWhiteSpace(item.PhotoUrl))
                        {
                            <img src="@item.PhotoUrl"
                                 alt="@item.DogName"
                                 class="card-img-top"
                                 style="object-fit: cover; height: 220px;" />
                        }

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@item.DogName</h5>
                            <p class="card-text mb-2">
                                <strong>Compatibilidad:</strong>
                                <span class="badge bg-success">@item.CompatibilityScore %</span>
                            </p>
                            <p class="card-text mb-1">
                                <strong>Tamaño:</strong> @item.Size
                            </p>
                            <p class="card-text mb-1">
                                <strong>Nivel de energía:</strong> @item.EnergyLevel / 5
                            </p>
                            <p class="card-text text-muted mb-3">
                                <small>Ingreso: @item.IntakeDate.ToLocalTime().ToString("g")</small>
                            </p>

                            <div class="mt-auto d-flex gap-2">
                                <a asp-controller="Dogs"
                                   asp-action="Details"
                                   asp-route-id="@item.DogId"
                                   class="btn btn-outline-primary btn-sm">
                                    Ver detalle
                                </a>

                                <a asp-controller="AdoptionApplications"
                                   asp-action="Create"
                                   asp-route-dogId="@item.DogId"
                                   class="btn btn-success btn-sm">
                                    Adoptar
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info mt-3">
            Por ahora no tenemos recomendaciones para ti. Intenta más tarde o revisa los perritos disponibles.
        </div>
    }
}

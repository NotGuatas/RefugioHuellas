@page
@model LoginModel
@{
    ViewData["Title"] = "Iniciar sesión";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">

        <div class="card card-section mb-4">
            <div class="card-body">
                <h1 class="h4 mb-2 text-center">Iniciar sesión</h1>
                <p class="text-muted text-center mb-4">
                    Usa tu correo y contraseña para entrar a <strong>RefugioHuellas</strong>.
                </p>

                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Email -->
                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label"></label>
                        <input asp-for="Input.Email"
                               class="form-control"
                               autocomplete="username"
                               aria-required="true" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <!-- Password -->
                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label"></label>
                        <input asp-for="Input.Password"
                               class="form-control"
                               autocomplete="current-password"
                               aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <!-- Remember me -->
                    <div class="form-check mb-3">
                        <input asp-for="Input.RememberMe" class="form-check-input" />
                        <label asp-for="Input.RememberMe" class="form-check-label">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>

                    <button id="login-submit" type="submit" class="btn btn-success w-100">
                        Iniciar sesión
                    </button>
                </form>

                <hr class="my-4" />

                <div class="d-flex flex-column gap-1 small">
                    <a asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                        ¿Aún no tienes cuenta? Regístrate
                    </a>
                    <a asp-page="./ResendEmailConfirmation">Reenviar confirmación de correo</a>
                </div>
            </div>
        </div>

        @* Bloque de logins externos (Google, etc.), si algún día los configuras *@
        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
        {
            <div class="card card-section">
                <div class="card-body">
                    <h2 class="h6 mb-3">Usar otro servicio para iniciar sesión</h2>
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="d-grid gap-2">
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit"
                                        class="btn btn-outline-secondary"
                                        name="provider"
                                        value="@provider.Name">
                                    Iniciar sesión con @provider.DisplayName
                                </button>
                            }
                        </div>
                    </form>
                </div>
            </div>
        }
        else
        {
            @* Si no hay proveedores externos, simplemente no mostramos nada más *@
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
